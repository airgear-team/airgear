<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!-- Create Goods Table -->
    <changeSet id="1.0.0" author="ilya.deus">
        <createTable tableName="goods">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="Add_weekends_price" author="Oleksandr Panchenko">
        <addColumn tableName="goods">
            <column name="weekends_price" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Create Role Table -->
    <changeSet id="1.0.1" author="ilya.deus">
        <createTable tableName="role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create User Table -->
    <changeSet id="1.0.2" author="ilya.deus">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="phone" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create User_Roles Join Table -->
    <changeSet id="1.0.3" author="ilya.deus">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Add Foreign Key Constraint for Goods Table -->
    <changeSet id="1.0.4" author="ilya.deus">
        <addForeignKeyConstraint
                baseTableName="goods"
                baseColumnNames="user_id"
                constraintName="fk_goods_user"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- Add Foreign Key Constraint for User_Roles Table -->
    <changeSet id="1.0.5" author="ilya.deus">
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="user_id"
                constraintName="fk_user_roles_user"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="role_id"
                constraintName="fk_user_roles_role"
                referencedTableName="role"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- Add account_status_id field in Table User-->
    <changeSet id="1.0.6" author="vladyslav.haivoronskyi">
        <addColumn tableName="user">
            <column name="account_status_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <!-- Create Account_Status Table -->
    <changeSet id="1.0.7" author="vladyslav.haivoronskyi">
        <createTable tableName="account_status">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Add Foreign Key Constraint for Account_Status Table -->
    <changeSet id="1.0.8" author="vladyslav.haivoronskyi">
        <addForeignKeyConstraint
                baseTableName="user"
                baseColumnNames="account_status_id"
                constraintName="fk_user_account_status"
                referencedTableName="account_status"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="addDefaultStatus" author="vladyslav.haivoronskyi">
        <sql>INSERT INTO account_status (status_name, description) VALUES ('ACTIVE', 'This is status for active users')</sql>
        <sql>INSERT INTO account_status (status_name, description) VALUES ('INACTIVE', 'This is status for users with deleted account')</sql>
    </changeSet>

    <changeSet id="addDefaultRoles" author="ilya.deus">
        <sql>INSERT INTO role (name, description) VALUES ('USER', 'This is role for simple users')</sql>
        <sql>INSERT INTO role (name, description) VALUES ('MODERATOR', 'This is role for moderator')</sql>
        <sql>INSERT INTO role (name, description) VALUES ('ADMIN', 'This is role for users with admins rights')</sql>
    </changeSet>
  
      <!-- Add Phone to the Goods Table -->
    <changeSet id="1.0.7" author="Oleksandr Tuleninov">
        <addColumn tableName="goods">
            <column name="phone" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
  
    <!-- Add created_at, deleted_at fields to the User Table -->
    <changeSet id="1.0.9" author="Oleksandr Tuleninov">
        <addColumn tableName="users">
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="users">
            <column name="deleted_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Add Goods Status to the Goods Table -->
    <changeSet id="1.0.8" author="Oleksandr Tuleninov">
        <addColumn tableName="goods">
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>